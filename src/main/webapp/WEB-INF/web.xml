<?xml version="1.0" encoding="UTF-8"?>
	<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://Java.sun.com/xml/ns/javaee" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		version="3.0">
	  <display-name>elibrary</display-name>
	  <!-- Login page -->
	  <servlet>
	  	<servlet-name>LoginView</servlet-name>
	  	<jsp-file>/jsp/login.jsp</jsp-file>
	  </servlet>
	  <servlet-mapping>
	  	<servlet-name>LoginView</servlet-name>
	  	<url-pattern>/login</url-pattern>
	  </servlet-mapping>
	  <servlet>
	  	<servlet-name>LoggingView</servlet-name>
	  	<servlet-class>pl.controllers.LoginServlet</servlet-class>
	  </servlet>
	  <servlet-mapping>
	  	<servlet-name>LoggingView</servlet-name>
	  	<url-pattern>/logging</url-pattern>
	  </servlet-mapping>
	  <!-- Registration page -->
	  <servlet>
	  	<servlet-name>RegistrationView</servlet-name>
	  	<jsp-file>/jsp/register.jsp</jsp-file>
	  </servlet>
	  <servlet-mapping>
	  	<servlet-name>RegistrationView</servlet-name>
	  	<url-pattern>/registration</url-pattern>
	  </servlet-mapping>
	  <welcome-file-list>
		<welcome-file>index.html</welcome-file>
	  </welcome-file-list>
	  <!-- Faces -->
	  <context-param>
	    <param-name>javax.faces.PROJECT_STAGE</param-name>
	    <param-value>Development</param-value>
	  </context-param>
	  <servlet>
		 <servlet-name>Faces Servlet</servlet-name>
		 <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
	  </servlet>
	  <servlet-mapping>
	    <servlet-name>Faces Servlet</servlet-name>
	    <url-pattern>*.xhtml</url-pattern>
	  </servlet-mapping>
</web-app>